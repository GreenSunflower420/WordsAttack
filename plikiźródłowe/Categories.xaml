<Window x:Class="Development.Categories"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Development"
        mc:Ignorable="d"
        Title="Wybór kategorii" Height="768" Width="1024" Background="#FF9AD9EA">
    <Grid>

        <Label Content="Kategorie" FontSize="72" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">


            <Button Content="Dom" Name="btnDom" Click="CategoryButton_Click" Margin="0,20" Height="60" FontSize="24"/>
            <Button Content="Owoce" Name="btnOwoce" Click="CategoryButton_Click" Margin="0,20" Height="60" FontSize="24"/>
            <Button Content="Pojazdy" Name="btnPojazdy" Click="CategoryButton_Click" Margin="0,20" Height="60" FontSize="24"/>
            <Button Content="Rodzina" Name="btnRodzina" Click="CategoryButton_Click" Margin="0,20" Height="60" FontSize="24"/>
            <Button Content="Zwierzeta" Name="btnZwierzeta" Click="CategoryButton_Click" Margin="0,20" Height="60" FontSize="24"/>
        </StackPanel>
    </Grid>
</Window>
